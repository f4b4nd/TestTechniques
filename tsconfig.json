{
    "compilerOptions": {
      "module": "ESNext",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "allowJs": false,
      "forceConsistentCasingInFileNames": true, 
      "strict": true,
      "isolatedModules": true,
      "target": "ESNext"
    },
    "ts-node": {
        "esm": true,
        "files": true
    },
    "exclude": [
      "node_modules"
    ]
}
